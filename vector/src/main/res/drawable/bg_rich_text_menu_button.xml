            <corners android:radius="8dp" />
            <solid android:color="?attr/vctr_rich_text_editor_menu_button_background" />
        </shape>
    </item>
    <item>
        <ripple android:color="?attr/vctr_rich_text_editor_menu_button_background" />
    </item>
</selector>
